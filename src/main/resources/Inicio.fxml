<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controlador.PrincipalController">
    <top>
        <MenuBar>
            <Menu text="Archivo">
                <MenuItem text="Salir" onAction="#salir"/>
            </Menu>
            <Menu text="Gestión">
                <MenuItem text="Pacientes" onAction="#mostrarPacientes"/>
                <MenuItem text="Doctores" onAction="#mostrarDoctores"/>
                <MenuItem text="Citas" onAction="#mostrarCitas"/>
            </Menu>
            <Menu text="Configuración">
                <MenuItem text="Gestor de Configuración" onAction="#mostrarConfiguracion"/>
            </Menu>
        </MenuBar>
    </top>
    <center>
        <TabPane>
            <Tab text="Pacientes">
                <BorderPane>
                    <top>
                        <ToolBar>
                            <Button text="Agregar" onAction="#agregarPaciente"/>
                            <Button text="Editar" onAction="#editarPaciente"/>
                            <Button text="Eliminar" onAction="#eliminarPaciente"/>
                        </ToolBar>
                    </top>
                    <center>
                        <VBox>
                            <GridPane hgap="10" vgap="10" alignment="CENTER">
                                <Label text="Nombre:"/>
                                <TextField fx:id="txtNombrePaciente" GridPane.columnIndex="1"/>
                                <Label text="Edad:" GridPane.rowIndex="1"/>
                                <TextField fx:id="txtEdadPaciente" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                <Label text="Historial:" GridPane.rowIndex="2"/>
                                <TextField fx:id="txtHistorialPaciente" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                            </GridPane>
                            <TableView fx:id="tablaPacientes">
                                <columns>
                                    <TableColumn text="Nombre" fx:id="colNombre"/>
                                    <TableColumn text="Edad" fx:id="colEdad"/>
                                    <TableColumn text="Historial" fx:id="colHistorial"/>
                                </columns>
                            </TableView>
                        </VBox>
                    </center>
                </BorderPane>
            </Tab>
            <Tab text="Doctores">
                <BorderPane>
                    <top>
                        <ToolBar>
                            <Button text="Agregar" onAction="#agregarDoctor"/>
                            <Button text="Editar" onAction="#editarDoctor"/>
                            <Button text="Eliminar" onAction="#eliminarDoctor"/>
                        </ToolBar>
                    </top>
                    <center>
                        <VBox>
                            <GridPane hgap="10" vgap="10" alignment="CENTER">
                                <Label text="Nombre:"/>
                                <TextField fx:id="txtNombreDoctor" GridPane.columnIndex="1"/>
                                <Label text="Especialidad:" GridPane.rowIndex="1"/>
                                <TextField fx:id="txtEspecialidadDoctor" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                            </GridPane>
                            <TableView fx:id="tablaDoctores">
                                <columns>
                                    <TableColumn text="Nombre" fx:id="colNombreDoctor"/>
                                    <TableColumn text="Especialidad" fx:id="colEspecialidad"/>
                                </columns>
                            </TableView>
                        </VBox>
                    </center>
                </BorderPane>
            </Tab>
            <Tab text="Citas">
                <BorderPane>
                    <top>
                        <ToolBar>
                            <Button text="Reservar" onAction="#reservarCita"/>
                            <Button text="Cancelar" onAction="#cancelarCita"/>
                        </ToolBar>
                    </top>
                    <center>
                        <TableView fx:id="tablaCitas">
                            <columns>
                                <TableColumn text="Paciente" fx:id="colPacienteCita"/>
                                <TableColumn text="Doctor" fx:id="colDoctorCita"/>
                                <TableColumn text="Fecha" fx:id="colFechaCita"/>
                            </columns>
                        </TableView>
                    </center>
                </BorderPane>
            </Tab>
            <Tab text="Configuración">
                <GridPane hgap="10" vgap="10" alignment="CENTER">
                    <Label text="Horario de Atención:"/>
                    <TextField fx:id="txtHorario" GridPane.columnIndex="1"/>
                    <Label text="Máx. Pacientes por Médico:" GridPane.rowIndex="1"/>
                    <TextField fx:id="txtMaxPacientes" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    <Label text="Reglas de Facturación:" GridPane.rowIndex="2"/>
                    <TextArea fx:id="txtFacturacion" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    <Button text="Guardar" onAction="#guardarConfiguracion" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                </GridPane>
            </Tab>
        </TabPane>
    </center>
</BorderPane>
